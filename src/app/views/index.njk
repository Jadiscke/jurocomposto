{% extends 'layout.njk' %}
{% set title = "JuroComposto.net" %}
{% block content %}
<main>
  <div class="interest">
    <div class="interest-inputs">
      <div>
        <label for="initial_value">R$</label>
        <input name="initial_value" type="number" placeholder="Aplicação Inicial em R$"  onkeypress="return event.charCode >= 48" min=0>
      </div>
      <div>
        <label for="monthly_value">R$</label>
        <input name="monthly_value" type="number" placeholder="Aplicação Mensal em R$"  onkeypress="return event.charCode >= 48" min=0>
      </div>
      <input name="months" type="number" placeholder="Meses"min=0  onkeypress="return event.charCode >= 48" step=1>
      <input name="interest" type="number" placeholder="Taxa%"min=0  onkeypress="return event.charCode >= 48 || event.charCode === 44" step=0.1>
      <select name="interest_type">
        <option value="yearly">Anual</option>
        <option value="monthly">Mensal</option>
      </select>
      <button class="calculate">Calcular</button>
    </div>
    <h1>JuroComposto.net</h1>
    <div class="result"></div>
  </div>
  
  <script src="main.js"></script>
</main>
{% endblock content %}